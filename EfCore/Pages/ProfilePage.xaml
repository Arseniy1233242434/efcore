<Page x:Class="EfCore.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Аватар</Label>

                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox  Text="{Binding AvatarUrl}" Grid.Column="0">
                    </TextBox>
                    <Button  Grid.Column="1" Click="Button_Click">...</Button>
                </Grid>



            </StackPanel>
            <StackPanel>
                <Label>Телефон</Label>
                <TextBox x:Name="Phone">
                    <Binding Path="Phone"  >
                        <Binding.ValidationRules>
                            <local:IsNumberCorrect />
                        </Binding.ValidationRules>
                    </Binding>


                </TextBox>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=Phone, Path=
(Validation.Errors)}">
                    <ItemsControl.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>



            </StackPanel>
            <StackPanel>
                <Label>Дата рождения</Label>
                <DatePicker  x:Name="date" Style="{StaticResource MaterialDesignDatePicker}">
                    <DatePicker.SelectedDate>
                        <Binding Path="Birthday"  >
                            <Binding.ValidationRules>
                                <local:IsDateCorrect />
                            </Binding.ValidationRules>
                        </Binding>

                    </DatePicker.SelectedDate>

                </DatePicker>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=date, Path=
(Validation.Errors)}">
                    <ItemsControl.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Описание</Label>
                <TextBox x:Name="Bio">
                    <Binding Path="Bio"  >
                        <Binding.ValidationRules>
                            <local:IsLoginCorrect />
                        </Binding.ValidationRules>
                    </Binding>


                </TextBox>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=Bio, Path=
(Validation.Errors)}">
                    <ItemsControl.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>



            </StackPanel>
            <StackPanel>
                <Button  Click="Button_Click_1">Сохранить в БД</Button>
                <Button Click="Button_Click_2">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

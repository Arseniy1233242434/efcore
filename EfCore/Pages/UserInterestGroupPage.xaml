<Page x:Class="EfCore.Pages.UserInterestGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserInterestGroupPage">
    
    <Page.Resources>
        <Style TargetType="TextBlock"  >
            <Setter Property="Margin" Value="3"/>
            

        </Style>
        <local:Converter3 x:Key="g2"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click" >Назад</Button>

           
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Text="Логин"></TextBlock>
                <TextBlock Text="{Binding _student.Login}"></TextBlock>
                <TextBlock Text="Имя"></TextBlock>
                <TextBlock Text="{Binding _student.Name}"></TextBlock>
                <TextBlock Text="Почта"></TextBlock>
                <TextBlock Text="{Binding _student.Email}"></TextBlock>

                <Label>Дата</Label>
                <DatePicker  x:Name="date" Style="{StaticResource MaterialDesignDatePicker}">
                    <DatePicker.SelectedDate>
                        <Binding Path="group1.JoinedAt"  >
                            <Binding.ValidationRules>
                                <local:IsDateCorrect />
                            </Binding.ValidationRules>
                        </Binding>

                    </DatePicker.SelectedDate>

                </DatePicker>
                <CheckBox IsChecked="{Binding group1.IsModerator}">Модератор</CheckBox>
                <Button Click="Button_Click_1">Записаться</Button>
            </StackPanel>
            <ListView Grid.Column="1"
                  
ItemsSource="{Binding service.Cources}"

SelectedItem="{Binding group}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock>
<Run Text="Группа: "/>
<Run Text="{Binding Title}"/>
                            </TextBlock>

                            <TextBlock>
<Run Text="Описание: "/>
<Run Text="{Binding Description}"/>

                            </TextBlock>

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
       
    </Grid>
</Page>

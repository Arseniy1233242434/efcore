<Page x:Class="EfCore.Pages.InterestGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterestGroupPage"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Click="Button_Click">Назад</Button>
            <Button Click="Button_Click_1">Добавить</Button>
            <Button Click="Button_Click_2" >Удалить</Button>
        </StackPanel>
        <ListView Grid.Row="1"
                  MouseDoubleClick="ListView_MouseDoubleClick"
ItemsSource="{Binding service.Cources}"

SelectedItem="{Binding current}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
<Run Text="Группа: "/>
<Run Text="{Binding Title}"/>
                    </TextBlock>

                    <TextBlock>
<Run Text="Описание: "/>
<Run Text="{Binding Description}"/>
                        
                    </TextBlock>
                        
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

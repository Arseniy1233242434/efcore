<Page x:Class="EfCore.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:services="clr-namespace:EfCore.Service"
      Title="UserFormPage">

    <Page.Resources>
        <services:RolesService x:Key="gService"/>
    </Page.Resources>

    <Grid>
        <StackPanel>
          
            <StackPanel>
                <Label>Логин</Label>
                <TextBox x:Name="login">
                    <Binding Path="Login"  >
                        <Binding.ValidationRules>
                            <local:IsLoginCorrect />
                        </Binding.ValidationRules>
                    </Binding>
                    

                </TextBox>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=login, Path=
(Validation.Errors)}">
                <ItemsControl.ItemTemplate >
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                </ItemsControl>
                


            </StackPanel>
            <StackPanel>
                <Label>Имя</Label>
                <TextBox Text="{Binding Name}"/>
            </StackPanel>
            <StackPanel>
                <Label>Почта</Label>
                <TextBox  x:Name="email">
                    <Binding Path="Email"  >
                        <Binding.ValidationRules>
                            <local:IsEmailCorrect />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=email, Path=
(Validation.Errors)}">
                    <ItemsControl.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Пароль</Label>
                <TextBox x:Name="password">
                    <Binding Path="Password"  >
                        <Binding.ValidationRules>
                            <local:IsPasswordCorrect />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=password, Path=
(Validation.Errors)}">
                    <ItemsControl.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            
            <StackPanel>
                <Label>Дата</Label>
                <DatePicker  x:Name="date" Style="{StaticResource MaterialDesignDatePicker}">
                    <DatePicker.SelectedDate>
                        <Binding Path="CreatedAt"  >
                            <Binding.ValidationRules>
                                <local:IsDateCorrect />
                            </Binding.ValidationRules>
                        </Binding>

                    </DatePicker.SelectedDate>

                </DatePicker>
                <ItemsControl  Grid.Row="4" 
FontSize="12"
ItemsSource="{Binding ElementName=date, Path=
(Validation.Errors)}">
                    <ItemsControl.ItemTemplate >
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"  />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>


            <StackPanel>
                <Label>Роль</Label>
                <ComboBox ItemsSource="{Binding Source={StaticResource
gService}, Path=Roles}"
                          DisplayMemberPath="Title"
SelectedItem="{Binding Role}" />
                
            </StackPanel>










            <StackPanel>
                <Button Click="save" >Сохранить в БД</Button>
                <Button Click="back">Назад</Button>
            </StackPanel>



            

        </StackPanel>
    </Grid>
</Page>
